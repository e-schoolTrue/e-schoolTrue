{
  "name": "e-school",
  "private": true,
  "version": "1.0.0",
  "description": "Application de gestion d'école",
  "author": "",
  "scripts": {
    "dev": "vite",
    "build:electron": "tsc -p tsconfig.node.json",
    "build:frontend": "vue-tsc --noEmit && vite build",
    "build": "npm run build:electron && npm run build:frontend && electron-builder",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom",
    "rebuild:db-driver": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.5.0",
    "electron-print-preview": "^2.2.0",
    "node-machine-id": "^1.1.12",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@iconify-json/bi": "^1.1.23",
    "@iconify-json/carbon": "^1.1.31",
    "@iconify-json/ep": "^1.1.15",
    "@iconify-json/mdi": "^1.1.64",
    "@iconify-json/ri": "^1.1.20",
    "@iconify-json/vaadin": "^1.1.9",
    "@iconify/vue": "^4.1.1",
    "@mdi/js": "^7.4.47",
    "@pinia/testing": "^0.0.14",
    "@types/jsdom": "^21.1.7",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/devtools": "^6.6.4",
    "@vue/test-utils": "^2.4.6",
    "chart.js": "^4.4.7",
    "csv-parser": "^3.0.0",
    "date-fns": "^4.1.0",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "element-plus": "^2.6.2",
    "html2pdf.js": "^0.10.2",
    "i18n-iso-countries": "^7.11.0",
    "jsdom": "^24.1.3",
    "pinia": "^2.3.0",
    "print-js": "^1.6.0",
    "qrcode.vue": "^3.6.0",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-element-plus": "^0.8.0",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.6.1",
    "vue": "^3.4.21",
    "vue-chartjs": "^5.3.2",
    "vue-html-to-paper": "^2.0.3",
    "vue-router": "^4.3.0",
    "vue-tsc": "^2.2.10",
    "xlsx": "^0.18.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.exemple.eschool",
    "productName": "e-school",
    "copyright": "Copyright © 2025 NovaTech",
    "directories": {
      "output": "release/",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      ".env"
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
